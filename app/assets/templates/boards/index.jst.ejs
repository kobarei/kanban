<header class="boards-index">
  <h2>Board一覧</h2>
</header>

<ul class="boards-list">
  <% boards.each(function (board) { %>
    <li>
      <a href="/#boards/<%= board.id %>">
        <%= board.escape("name") %>
      </a>
    </li>
  <% }); %>
</ul>

<h3>新しいBoardを作成する</h3>

<div class="create_board">
  <form class="create_board">
    <input type="text"
           class="board_name"
           name="board[name]"
           placeholder="ボードの名前 ..." />
    <input type="text"
           class="board_description"
           name="board[description]"
           placeholder="ボードの説明 ..." />
    <input type="submit" value="作成" />
  </form>
</div>
