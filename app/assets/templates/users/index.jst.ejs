<header>
	<p>Boardメンバー</p>
</header>

<ul class="users">
	<% users.each(function (user) { %>
		<li class="user"
				data-user-id="<%= user.id %>">
			<img class="avatar" src="<%= user.escape("gravatar_url") %>" />
		</li>
	<% }); %>
</ul>

<form class="add_user">
	<input type="text"
         name="user_id"
         placeholder="メンバーを追加する ..." />
	<input type="submit" value="追加" />
</form>
